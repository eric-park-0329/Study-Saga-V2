#:kivy 2.3.0

<InventoryScreen>:
    FloatLayout:
        size: root.size

        Label:
            text: "Inventory"
            font_size: '26sp'
            pos_hint: {'center_x': 0.5, 'top': 0.95}

        GridLayout:
            cols: 1
            size_hint: 0.9, 0.7
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            row_default_height: dp(90)
            row_force_default: False
            spacing: dp(6)

            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: "[b]Hair[/b]"
                    markup: True
                    font_size: '18sp'
                ScrollView:
                    do_scroll_x: True
                    do_scroll_y: False
                    BoxLayout:
                        id: hair_box
                        height: dp(64)
                        size_hint_y: None
                        size_hint_x: None
                        width: self.minimum_width
                        spacing: dp(6)

            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: "[b]Top[/b]"
                    markup: True
                    font_size: '18sp'
                ScrollView:
                    do_scroll_x: True
                    do_scroll_y: False
                    BoxLayout:
                        id: top_box
                        height: dp(64)
                        size_hint_y: None
                        size_hint_x: None
                        width: self.minimum_width
                        spacing: dp(6)

            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: "[b]Bottom[/b]"
                    markup: True
                    font_size: '18sp'
                ScrollView:
                    do_scroll_x: True
                    do_scroll_y: False
                    BoxLayout:
                        id: bottom_box
                        height: dp(64)
                        size_hint_y: None
                        size_hint_x: None
                        width: self.minimum_width
                        spacing: dp(6)

            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: "[b]Shoes[/b]"
                    markup: True
                    font_size: '18sp'
                ScrollView:
                    do_scroll_x: True
                    do_scroll_y: False
                    BoxLayout:
                        id: shoes_box
                        height: dp(64)
                        size_hint_y: None
                        size_hint_x: None
                        width: self.minimum_width
                        spacing: dp(6)

            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: "[b]Accessory[/b]"
                    markup: True
                    font_size: '18sp'
                ScrollView:
                    do_scroll_x: True
                    do_scroll_y: False
                    BoxLayout:
                        id: acc_box
                        height: dp(64)
                        size_hint_y: None
                        size_hint_x: None
                        width: self.minimum_width
                        spacing: dp(6)

        Button:
            text: "Back"
            size_hint: 0.2, None
            height: dp(44)
            pos_hint: {'center_x': 0.5, 'y': 0.04}
            on_release: app.go_home()
