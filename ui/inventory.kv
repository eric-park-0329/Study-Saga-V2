#:kivy 2.3.0

<InventoryScreen>:
    FloatLayout:
        size: root.size

        Label:
            text: "Inventory"
            font_size: '26sp'
            pos_hint: {'center_x': 0.5, 'top': 0.95}

        BoxLayout:
            orientation: 'vertical'
            size_hint: None, 0.7
            width: dp(140)
            spacing: dp(6)
            pos_hint: {'x': 0.06, 'center_y': 0.5}
            Button:
                text: "Hair"
                on_release: app.inv_select("hair")
            Button:
                text: "Top"
                on_release: app.inv_select("top")
            Button:
                text: "Bottom"
                on_release: app.inv_select("bottom")
            Button:
                text: "Shoes"
                on_release: app.inv_select("shoes")
            Button:
                text: "Accessory"
                on_release: app.inv_select("accessory")

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.66, 0.7
            spacing: dp(6)
            pos_hint: {'right': 0.94, 'center_y': 0.5}

            Label:
                text: "Tap an item to equip"
                font_size: '16sp'
                size_hint_y: None
                height: dp(24)

            ScrollView:
                do_scroll_y: True
                do_scroll_x: False
                GridLayout:
                    id: grid
                    cols: 4
                    size_hint_y: None
                    height: self.minimum_height
                    row_default_height: dp(120)
                    row_force_default: False
                    spacing: dp(8)

        Button:
            text: "Back"
            size_hint: 0.2, None
            height: dp(44)
            pos_hint: {'center_x': 0.5, 'y': 0.05}
            on_release: app.go_home()
