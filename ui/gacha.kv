#:kivy 2.3.0

<GachaScreen>:
    FloatLayout:
        size: root.size

        Label:
            text: "Gacha"
            font_size: '26sp'
            pos_hint: {'center_x': 0.5, 'top': 0.92}

        Label:
            id: crystals
            text: "Crystals: -"
            font_size: '18sp'
            pos_hint: {'center_x': 0.5, 'top': 0.85}

        Image:
            id: glow
            source: "assets/glow.png"
            color: 1,1,1,0.0
            size_hint: None, None
            size: dp(220), dp(220)
            pos_hint: {'center_x': 0.5, 'center_y': 0.58}
            opacity: 0.0

        Image:
            id: chest
            source: "assets/chest_closed.png"
            size_hint: None, None
            size: dp(220), dp(220)
            pos_hint: {'center_x': 0.5, 'center_y': 0.58}

        Image:
            id: result
            size_hint: None, None
            size: dp(160), dp(160)
            pos_hint: {'center_x': 0.5, 'center_y': 0.58}

        Widget:
            id: fx_holder
            size_hint: None, None
            size: dp(140), dp(140)
            pos_hint: {'center_x': 0.5, 'center_y': 0.58}
            GachaFX:
                id: fx
                pos: self.parent.pos
                size: dp(120), dp(120)
                canvas.before:
                    PushMatrix
                    Rotate:
                        angle: self.angle
                        origin: self.center
                    Scale:
                        x: self.scale
                        y: self.scale
                        origin: self.center
                canvas.after:
                    PopMatrix
                canvas:
                    Color:
                        rgba: self.color
                    Rectangle:
                        size: self.size
                        pos: self.pos

        Label:
            text: root.status
            font_size: '18sp'
            color: 1,0.85,0.4,1
            markup: True
            pos_hint: {'center_x': 0.5, 'top': 0.42}

        BoxLayout:
            size_hint: 0.8, None
            height: dp(44)
            spacing: dp(10)
            pos_hint: {'center_x': 0.5, 'y': 0.06}
            Button:
                text: "Roll (50)"
                on_release: app.gacha_roll(1)
            Button:
                text: "Roll x10 (480)"
                on_release: app.gacha_roll(10)
            Button:
                text: "Back"
                on_release: app.go_home()
